  <div class="col-md-9">
    <h1>Profile Of Creater</h1>
    <div class="col-md-4">
      <h2><%= user.firstName + " " + user.lastName %></h2>
      <div class="thumbnail">
        <img src="<%= user.avatar %>" alt="user profile image" />
